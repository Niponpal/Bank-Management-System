                <i class="bi bi-people fs-5 me-3"></i>
                <span class="sidebar-text">Customers</span>
            </a>
            <a asp-page="/Accounts" class="nav-link d-flex align-items-center">
                <i class="bi bi-wallet2 fs-5 me-3"></i>
                <span class="sidebar-text">Accounts</span>
            </a>
            <a asp-page="/Transactions" class="nav-link d-flex align-items-center">
                <i class="bi bi-arrow-left-right fs-5 me-3"></i>
                <span class="sidebar-text">Transactions</span>
            </a>

            <div class="nav-section-title mt-5">ORGANIZATION</div>
            <a asp-page="/Branches" class="nav-link d-flex align-items-center">
                <i class="bi bi-building fs-5 me-3"></i>
                <span class="sidebar-text">Branches</span>
            </a>

