@model BankManagementSystem.Models.Transaction

@{
    ViewData["Title"] = Model?.Id > 0 ? "Edit Transaction" : "Create Transaction";
    var isEdit = Model?.Id > 0;
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-5 flex-wrap gap-3">
        <div>
            <h2 class="fw-bold mb-1">@(isEdit ? "Edit Transaction" : "Create New Transaction")</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Transactions</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@(isEdit ? "Edit" : "Create")</li>
                </ol>
            </nav>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2">
            <i class="bi bi-arrow-left"></i>
            Back to List
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <!-- Main Form Card -->
            <div class="dashboard-card shadow">
                <div class="card-header d-flex justify-content-between align-items-center bg-gradient-primary-soft">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-receipt me-2"></i>
                        Transaction Details
                    </h5>
                    @if (isEdit)
                    {
                        <small class="text-muted">
                            ID: @Model.Id • @Model.CreatedAt.ToString("dd-MMM-yyyy hh:mm tt")
                        </small>
                    }
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="CreateOrEdit" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()

                        @if (isEdit)
                        {
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="CreatedAt" />
                        }

                        <!-- Transaction Type -->
                        <div class="mb-5">
                            <label class="form-label fw-bold mb-3">
                                <i class="bi bi-arrow-left-right me-2"></i>
                                Transaction Type
                            </label>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <input type="radio" class="btn-check" name="TransactionType" id="typeDeposit" value="1"
                                           asp-for="TransactionType" autocomplete="off">
                                    <label class="btn btn-outline-success w-100 py-4 text-center" for="typeDeposit">
                                        <i class="bi bi-arrow-down-circle fs-3 mb-2 d-block"></i>
                                        <span class="fw-bold">Deposit</span>
                                    </label>
                                </div>
                                <div class="col-md-4">
                                    <input type="radio" class="btn-check" name="TransactionType" id="typeWithdrawal" value="2"
                                           asp-for="TransactionType" autocomplete="off">
                                    <label class="btn btn-outline-danger w-100 py-4 text-center" for="typeWithdrawal">
                                        <i class="bi bi-arrow-up-circle fs-3 mb-2 d-block"></i>
                                        <span class="fw-bold">Withdrawal</span>
                                    </label>
                                </div>
                                <div class="col-md-4">
                                    <input type="radio" class="btn-check" name="TransactionType" id="typeTransfer" value="3"
                                           asp-for="TransactionType" autocomplete="off">
                                    <label class="btn btn-outline-info w-100 py-4 text-center" for="typeTransfer">
                                        <i class="bi bi-arrow-left-right fs-3 mb-2 d-block"></i>
                                        <span class="fw-bold">Transfer</span>
                                    </label>
                                </div>
                            </div>
                            <span asp-validation-for="TransactionType" class="text-danger small d-block mt-2"></span>
                        </div>

                        <!-- Account Selection -->
                        <div class="mb-5">
                            <label asp-for="AccountCustomerId" class="form-label fw-bold">
                                <i class="bi bi-person-circle me-2"></i>
                                Select Account
                            </label>
                            <select asp-for="AccountCustomerId"
                                    asp-items="ViewBag.AccountCustomerId"
                                    class="form-select form-select-lg"
                                    id="accountSelect"
                                    required>
                                <option value="">-- Choose Customer Account --</option>
                            </select>
                            <span asp-validation-for="AccountCustomerId" class="text-danger small d-block mt-2"></span>

                            <!-- Account Preview -->
                            <div id="accountPreview" class="mt-4 p-4 border rounded bg-gradient-primary-soft" style="display: none;">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1 fw-bold" id="accountName">Customer Name</h6>
                                        <small class="text-muted d-block" id="accountNumber">Account Number</small>
                                    </div>
                                    <div class="text-end">
                                        <small class="text-muted d-block">Balance</small>
                                        <h6 class="fw-bold text-primary mb-0" id="accountBalance">$0.00</h6>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Amount -->
                        <div class="mb-5">
                            <label asp-for="Amount" class="form-label fw-bold">
                                <i class="bi bi-currency-dollar me-2"></i>
                                Amount
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">$</span>
                                <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0.01"
                                       placeholder="0.00" id="amountInput" required>
                                <span class="input-group-text">USD</span>
                            </div>
                            <span asp-validation-for="Amount" class="text-danger small d-block mt-2"></span>

                            <!-- Quick Amounts -->
                            <div class="mt-3">
                                <small class="text-muted me-2">Quick Amounts:</small>
                                <button type="button" class="btn btn-sm btn-outline-secondary me-1" onclick="setAmount(100)">100</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary me-1" onclick="setAmount(500)">500</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary me-1" onclick="setAmount(1000)">1,000</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="setAmount(5000)">5,000</button>
                            </div>
                        </div>

                        <!-- Reference -->
                        <div class="mb-5">
                            <label asp-for="Reference" class="form-label fw-bold">
                                <i class="bi bi-chat-text me-2"></i>
                                Reference / Note
                            </label>
                            <textarea asp-for="Reference" class="form-control" rows="3"
                                      placeholder="Enter transaction reference or description..." maxlength="500"></textarea>
                            <span asp-validation-for="Reference" class="text-danger small d-block mt-2"></span>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between pt-4 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2">
                                <i class="bi bi-x-circle"></i>
                                Cancel
                            </a>
                            <div class="d-flex gap-3">
                                @if (isEdit)
                                {
                                    <button type="button" class="btn btn-outline-info d-flex align-items-center gap-2" onclick="printReceipt()">
                                        <i class="bi bi-printer"></i>
                                        Print Receipt
                                    </button>
                                }
                                <button type="submit" class="btn btn-primary d-flex align-items-center gap-2 px-5">
                                    <i class="bi bi-save"></i>
                                    @(isEdit ? "Update Transaction" : "Create Transaction")
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Quick amount buttons
        function setAmount(amount) {
            document.getElementById('amountInput').value = amount.toFixed(2);
            updatePreview();
        }

        // Real-time preview update
        function updatePreview() {
            const amount = document.getElementById('amountInput').value;
            const typeRadio = document.querySelector('input[name="TransactionType"]:checked');

            if (amount) {
                document.getElementById('previewAmount').textContent = '$' + parseFloat(amount).toFixed(2);
            }

            if (typeRadio) {
                const label = typeRadio.nextElementSibling;
                document.getElementById('previewType').textContent = label.querySelector('span').textContent;
                const color = typeRadio.value == 1 ? 'success' : typeRadio.value == 2 ? 'danger' : 'info';
                document.getElementById('previewType').className = `badge bg-${color}`;
            }
        }

        // Account preview (mock - replace with real AJAX in production)
        document.getElementById('accountSelect').addEventListener('change', function() {
            const preview = document.getElementById('accountPreview');
            if (this.value) {
                // In real app: AJAX to get account details
                preview.style.display = 'block';
                document.getElementById('accountName').textContent = "John Doe"; // mock
                document.getElementById('accountNumber').textContent = "****1234";
                document.getElementById('accountBalance').textContent = "$12,450.75";
            } else {
                preview.style.display = 'none';
            }
        });

        // Form validation + preview
        document.addEventListener('DOMContentLoaded', function() {
            updatePreview();
            document.querySelectorAll('input[name="TransactionType"], #amountInput')
                .forEach(el => el.addEventListener('change', updatePreview));
        });

        // Print receipt (mock)
        function printReceipt() {
            alert('Receipt printing would open here in real application');
        }
    </script>
}