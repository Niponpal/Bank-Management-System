@model BankManagementSystem.Models.Transaction

@{
    ViewData["Title"] = "Transaction Details";

    var transactionColor = Model.TransactionType == 1 ? "success" :
                           Model.TransactionType == 2 ? "danger" : "info";

    var transactionIcon = Model.TransactionType == 1 ? "arrow-down-circle" :
                          Model.TransactionType == 2 ? "arrow-up-circle" : "arrow-left-right";

    var typeText = Model.TransactionType == 1 ? "Deposit" :
                   Model.TransactionType == 2 ? "Withdrawal" : "Transfer";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-5 flex-wrap gap-3">
        <div>
            <h2 class="fw-bold mb-1">Transaction Details</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Transactions</a></li>
                    <li class="breadcrumb-item active">Transaction #@Model.Id</li>
                </ol>
            </nav>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2">
                <i class="bi bi-arrow-left"></i>
                Back to List
            </a>
            <button class="btn btn-outline-primary d-flex align-items-center gap-2" onclick="window.print()">
                <i class="bi bi-printer"></i>
                Print Receipt
            </button>
        </div>
    </div>

    <div class="row">
        <!-- Left Card - Summary -->
        <div class="col-lg-4 mb-4">
            <div class="dashboard-card text-center">
                <div class="card-body p-5">
                    <div class="rounded-circle bg-@transactionColor bg-opacity-10 d-inline-flex align-items-center justify-content-center mb-4"
                         style="width:100px;height:100px">
                        <i class="bi bi-@transactionIcon fs-1 text-@transactionColor"></i>
                    </div>

                    <h3 class="fw-bold mb-2 @(Model.TransactionType == 1 ? "text-success" : "text-danger")">
                        @(Model.TransactionType == 1 ? "+" : "-") @Model.Amount.ToString("N0")
                    </h3>

                    <span class="badge bg-@transactionColor bg-opacity-10 text-@transactionColor border border-@transactionColor border-opacity-25 px-4 py-2 fs-5">
                        @typeText
                    </span>

                    <hr class="my-4" />

                    <div class="d-flex justify-content-between mb-2 small fw-medium">
                        <span class="text-muted">Transaction ID</span>
                        <strong>#@Model.Id</strong>
                    </div>

                    <div class="d-flex justify-content-between mb-2 small fw-medium">
                        <span class="text-muted">Date</span>
                        <strong>@Model.CreatedAt.ToString("dd MMM yyyy")</strong>
                    </div>

                    <div class="d-flex justify-content-between mb-2 small fw-medium">
                        <span class="text-muted">Time</span>
                        <strong>@Model.CreatedAt.ToString("hh:mm tt")</strong>
                    </div>

                    <div class="d-flex justify-content-between small fw-medium">
                        <span class="text-muted">Status</span>
                        <span class="badge bg-success">Completed</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Section -->
        <div class="col-lg-8">
            <!-- Transaction Information -->
            <div class="dashboard-card mb-4">
                <div class="card-header bg-gradient-primary-soft">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-receipt me-2"></i>
                        Transaction Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="text-muted small fw-bold">Transaction ID</label>
                            <h6 class="fw-bold mb-1">#@Model.Id</h6>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small fw-bold">Type</label>
                            <h6 class="fw-bold mb-1">
                                <span class="badge bg-@transactionColor bg-opacity-10 text-@transactionColor border border-@transactionColor border-opacity-25 px-3 py-1">
                                    @typeText
                                </span>
                            </h6>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small fw-bold">Amount</label>
                            <h5 class="fw-bold @(Model.TransactionType == 1 ? "text-success" : "text-danger") mb-0">
                                @(Model.TransactionType == 1 ? "+" : "-") @Model.Amount.ToString("N0")
                            </h5>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small fw-bold">Date & Time</label>
                            <h6 class="fw-bold mb-0">@Model.CreatedAt.ToString("dd MMMM yyyy hh:mm tt")</h6>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Account Information -->
            <div class="dashboard-card">
                <div class="card-header bg-gradient-primary-soft">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-person-circle me-2"></i>
                        Account Information
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.AccountCustomer != null)
                    {
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label class="text-muted small fw-bold">Customer Name</label>
                                <h6 class="fw-bold mb-1">@Model.AccountCustomer.FullName</h6>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small fw-bold">Account Number</label>
                                <h6 class="fw-bold mb-1">@Model.AccountCustomer.AccountNumber</h6>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small fw-bold">Current Balance</label>
                                <h5 class="fw-bold text-success mb-0">@Model.AccountCustomer.Balance.ToString("N0")</h5>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small fw-bold">Phone</label>
                                <h6 class="fw-bold mb-1">@(Model.AccountCustomer.Phone ?? "N/A")</h6>
                            </div>
                            <div class="col-md-12">
                                <label class="text-muted small fw-bold">NID / National ID</label>
                                <h6 class="fw-bold mb-0">@(Model.AccountCustomer.NID ?? "N/A")</h6>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-person-circle text-muted" style="font-size: 3rem;"></i>
                            <h5 class="text-muted mt-3">Account Information Not Available</h5>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-5 d-flex justify-content-end gap-3">
        <button class="btn btn-outline-primary d-flex align-items-center gap-2 px-4" onclick="window.print()">
            <i class="bi bi-printer"></i>
            Print Receipt
        </button>
        <a asp-action="CreateOrEdit" asp-route-id="@Model.Id" class="btn btn-primary d-flex align-items-center gap-2 px-4">
            <i class="bi bi-pencil"></i>
            Edit Transaction
        </a>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary-soft {
            background: linear-gradient(135deg, rgba(51,102,255,0.06) 0%, transparent 100%);
        }

        .dashboard-card {
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

            .dashboard-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 12px 32px rgba(0,0,0,0.18);
            }

        .badge.bg-opacity-10 {
            backdrop-filter: blur(4px);
        }
        @@media print {
            .btn, .breadcrumb, .top-bar, .sidebar, footer

        {
            display: none !important;
        }

        body {
            background: white !important;
            color: black !important;
        }

        .dashboard-card {
            box-shadow: none !important;
            border: 1px solid #ddd !important;
        }

        }
    </style>
}

@section Scripts {
    <script>
        // Optional: Add any client-side features you want
        document.addEventListener('DOMContentLoaded', function() {
            // You can add receipt download or share logic here if needed
        });
    </script>
}