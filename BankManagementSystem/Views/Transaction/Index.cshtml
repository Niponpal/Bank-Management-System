@model IEnumerable<BankManagementSystem.Models.Transaction>

@{
    ViewData["Title"] = "Transaction Management";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-2">Transaction Management</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Transactions</li>
                </ol>
            </nav>
        </div>

        <div class="d-flex gap-2">
            <a asp-action="CreateOrEdit" class="btn btn-primary d-flex align-items-center gap-2">
                <i class="bi bi-plus-circle"></i>
                <span>Create New Transaction</span>
            </a>

            <!-- Export Button (Optional) -->
            <button class="btn btn-outline-secondary d-flex align-items-center gap-2">
                <i class="bi bi-download"></i>
                <span>Export</span>
            </button>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-primary text-uppercase mb-1">
                                Total Transactions
                            </div>
                            <div class="h5 mb-0 fw-bold">@Model?.Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-receipt text-primary fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-success text-uppercase mb-1">
                                Total Deposits
                            </div>
                            <div class="h5 mb-0 fw-bold">
                                @Model?.Where(t => t.TransactionType == 1).Sum(t => t.Amount).ToString("C") ?? "$0.00"
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-arrow-down-circle text-success fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-danger text-uppercase mb-1">
                                Total Withdrawals
                            </div>
                            <div class="h5 mb-0 fw-bold">
                                @Model?.Where(t => t.TransactionType == 2).Sum(t => t.Amount).ToString("C") ?? "$0.00"
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-arrow-up-circle text-danger fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs fw-bold text-info text-uppercase mb-1">
                                Total Transfers
                            </div>
                            <div class="h5 mb-0 fw-bold">
                                @Model?.Where(t => t.TransactionType == 3).Sum(t => t.Amount).ToString("C") ?? "$0.00"
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="bi bi-arrow-left-right text-info fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters & Search -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label small fw-bold">Transaction Type</label>
                    <select class="form-select">
                        <option value="">All Types</option>
                        <option value="1">Deposit</option>
                        <option value="2">Withdrawal</option>
                        <option value="3">Transfer</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-bold">Date Range</label>
                    <input type="date" class="form-control">
                </div>
                <div class="col-md-4">
                    <label class="form-label small fw-bold">Search</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="Search by Account Number, Name or Reference...">
                    </div>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button class="btn btn-outline-primary w-100">
                        <i class="bi bi-funnel"></i> Filter
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Transactions Table -->
    <div class="card shadow">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 fw-bold text-primary">Recent Transactions</h6>
            <div class="text-muted small">
                Showing @Model?.Count() transactions
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="text-center" style="width: 60px;">#</th>
                            <th>Account Details</th>
                            <th>Type</th>
                            <th>Amount</th>
                            <th>Reference</th>
                            <th>Date & Time</th>
                            <th class="text-center" style="width: 100px;">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            int sl = 1;
                        }

                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center">
                                        <span class="badge bg-secondary">@sl</span>
                                    </td>

                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold text-dark">@(item.AccountCustomer?.FullName ?? "N/A")</span>
                                            <small class="text-muted">
                                                <i class="bi bi-credit-card"></i>
                                                @(item.AccountCustomer?.AccountNumber ?? "N/A")
                                            </small>
                                        </div>
                                    </td>

                                    <td>
                                        @if (item.TransactionType == 1)
                                        {
                                            <div class="d-flex align-items-center gap-2">
                                                <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 rounded-pill px-3 py-1">
                                                    <i class="bi bi-arrow-down-circle me-1"></i> Deposit
                                                </span>
                                            </div>
                                        }
                                        else if (item.TransactionType == 2)
                                        {
                                            <div class="d-flex align-items-center gap-2">
                                                <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 rounded-pill px-3 py-1">
                                                    <i class="bi bi-arrow-up-circle me-1"></i> Withdrawal
                                                </span>
                                            </div>
                                        }
                                        else if (item.TransactionType == 3)
                                        {
                                            <div class="d-flex align-items-center gap-2">
                                                <span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25 rounded-pill px-3 py-1">
                                                    <i class="bi bi-arrow-left-right me-1"></i> Transfer
                                                </span>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Unknown</span>
                                        }
                            </td>

                            <td>
                                <span class="fw-bold @(item.TransactionType == 1 ? "text-success" : "text-danger")">
                                    @(item.TransactionType == 1 ? "+" : "-") @item.Amount.ToString("C")
                                </span>
                            </td>

                            <td>
                                <div class="text-truncate" style="max-width: 200px;"
                                     data-bs-toggle="tooltip"
                                     title="@(string.IsNullOrEmpty(item.Reference) ? "N/A" : item.Reference)">
                                    @(string.IsNullOrEmpty(item.Reference) ?
                                                                        "<span class='text-muted'>N/A</span>" :
                                                                        item.Reference)
                                </div>
                            </td>

                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="small fw-bold">@item.CreatedAt.ToString("dd-MMM-yyyy")</span>
                                            <small class="text-muted">@item.CreatedAt.ToString("hh:mm tt")</small>
                                        </div>
                                    </td>

                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details"
                                               asp-route-id="@item.Id"
                                               class="btn btn-sm btn-outline-primary"
                                               data-bs-toggle="tooltip"
                                               title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>

                                            <!-- Optional: Add Edit and Delete buttons -->
                                            <button type="button"
                                                    class="btn btn-sm btn-outline-secondary"
                                                    data-bs-toggle="tooltip"
                                                    title="Print Receipt">
                                                <i class="bi bi-printer"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                                sl++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7">
                                    <div class="text-center py-5">
                                        <div class="mb-3">
                                            <i class="bi bi-receipt text-muted" style="font-size: 3rem;"></i>
                                        </div>
                                        <h5 class="text-muted">No Transactions Found</h5>
                                        <p class="text-muted mb-0">No transactions have been recorded yet.</p>
                                        <a asp-action="CreateOrEdit" class="btn btn-primary mt-3">
                                            <i class="bi bi-plus-circle me-2"></i>Create First Transaction
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        <div class="card-footer d-flex justify-content-between align-items-center">
            <div class="text-muted small">
                Showing 1 to @Model?.Count() of @Model?.Count() entries
            </div>
            <nav aria-label="Page navigation">
                <ul class="pagination mb-0">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

<style>
    .card {
        border: none;
        border-radius: 10px;
    }

    .card-header {
        border-bottom: 1px solid rgba(0,0,0,.125);
        background-color: rgba(255,255,255,.03);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0,123,255,.05);
        transition: background-color 0.2s ease;
    }

    .badge.bg-opacity-10 {
        backdrop-filter: blur(10px);
    }

    .border-left-primary {
        border-left: 4px solid #4e73df !important;
    }

    .border-left-success {
        border-left: 4px solid #1cc88a !important;
    }

    .border-left-danger {
        border-left: 4px solid #e74a3b !important;
    }

    .border-left-info {
        border-left: 4px solid #36b9cc !important;
    }

    .shadow {
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15) !important;
    }

    .btn-group .btn {
        border-radius: 6px !important;
        margin: 0 2px;
    }
</style>

<script>
    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', function() {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    });
</script>