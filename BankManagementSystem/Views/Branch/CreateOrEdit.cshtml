@model BankManagementSystem.Models.Branch

@{
    bool isEdit = Model?.Id > 0;
    ViewData["Title"] = isEdit ? "Edit Branch" : "Create New Branch";
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-5 flex-wrap gap-3">
    <div>
        <h2 class="fw-bold mb-1">@ViewData["Title"]</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Branches</a></li>
                <li class="breadcrumb-item active" aria-current="page">@(isEdit ? "Edit" : "Create")</li>
            </ol>
        </nav>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary shadow-sm d-flex align-items-center gap-2">
        <i class="bi bi-arrow-left"></i>
        Back to List
    </a>
</div>

<!-- Main Form Card -->
<div class="dashboard-card shadow overflow-hidden">
    <!-- Card Header -->
    <div class="card-header bg-gradient-primary-soft d-flex align-items-center gap-3 py-4">
        <div class="bg-white bg-opacity-25 rounded-circle p-3">
            <i class="bi bi-building fs-4"></i>
        </div>
        <div>
            <h5 class="card-title mb-0 fw-semibold">Branch Information</h5>
            <small class="opacity-75">* Required fields</small>
        </div>
    </div>

    <!-- Card Body -->
    <div class="card-body p-5">
        <form asp-action="CreateOrEdit" method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()

            @if (isEdit)
            {
                <input type="hidden" asp-for="Id" />
            }

            <div class="row g-4">
                <!-- Branch Code -->
                <div class="col-md-6">
                    <label asp-for="BranchCode" class="form-label fw-semibold required">Branch Code</label>
                    <input asp-for="BranchCode" class="form-control form-control-lg shadow-sm"
                           placeholder="e.g. BR-001 or DHK-MAIN" required maxlength="20" />
                    <small class="text-muted">Unique identifier for the branch</small>
                    <span asp-validation-for="BranchCode" class="text-danger small d-block mt-1"></span>
                </div>

                <!-- Branch Name -->
                <div class="col-md-6">
                    <label asp-for="BranchName" class="form-label fw-semibold required">Branch Name</label>
                    <input asp-for="BranchName" class="form-control form-control-lg shadow-sm"
                           placeholder="e.g. Dhanmondi Main Branch" required />
                    <small class="text-muted">Official name as displayed</small>
                    <span asp-validation-for="BranchName" class="text-danger small d-block mt-1"></span>
                </div>

                <!-- Address -->
                <div class="col-12">
                    <label asp-for="Address" class="form-label fw-semibold required">Full Address</label>
                    <textarea asp-for="Address" class="form-control shadow-sm" rows="4"
                              placeholder="Street, City, Division/State, Postal Code" required></textarea>
                    <small class="text-muted">Complete branch location</small>
                    <span asp-validation-for="Address" class="text-danger small d-block mt-1"></span>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="mt-5 pt-4 border-top d-flex gap-3 flex-wrap justify-content-end">
                <a asp-action="Index" class="btn btn-outline-secondary px-5 py-2 shadow-sm d-flex align-items-center gap-2">
                    <i class="bi bi-x-circle"></i>
                    Cancel
                </a>

                <button type="submit" class="btn btn-primary px-5 py-2 shadow-sm d-flex align-items-center gap-2">
                    <i class="bi bi-check2-circle"></i>
                    @(isEdit ? "Update Branch" : "Create Branch")
                </button>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary-soft {
            background: linear-gradient(135deg, rgba(51,102,255,0.06) 0%, transparent 100%);
        }

        .dashboard-card {
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

            .dashboard-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 12px 32px rgba(0,0,0,0.18);
            }

        .form-control-lg, .form-select-lg {
            padding: 0.75rem 1.25rem;
            font-size: 1.1rem;
        }

        .form-label {
            font-size: 0.95rem;
        }

        .btn.shadow-sm:hover {
            transform: translateY(-1px);
            transition: transform 0.2s ease;
        }

        .required::after {
            content: " *";
            color: #dc3545;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });

            // Auto uppercase & clean branch code
            const codeInput = document.querySelector('[asp-for="BranchCode"]');
            if (codeInput) {
                codeInput.addEventListener('input', function () {
                    this.value = this.value
                        .toUpperCase()
                        .replace(/\s+/g, '-')
                        .replace(/[^A-Z0-9-]/g, '');
                });
            }
        })();
    </script>
}