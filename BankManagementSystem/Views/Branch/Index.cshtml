@model IEnumerable<BankManagementSystem.Models.Branch>

@{
    ViewData["Title"] = "Branches";

    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    string searchString = ViewBag.CurrentFilter ?? "";
    int totalRecords = ViewBag.TotalRecords ?? 0;
}

<div class="container-fluid px-4">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4 mt-3 flex-wrap gap-3">
        <div>
            <h3 class="mb-1 fw-bold text-primary">Branch Management</h3>
            <small class="text-muted">View and manage all bank branches</small>
        </div>

        <a asp-action="CreateOrEdit" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Add New Branch
        </a>
    </div>

    <!-- Main Card -->
    <div class="card shadow-sm border-0 rounded-3 overflow-hidden bg-white">
        <!-- Card Header with Search -->
        <div class="card-header bg-white border-bottom px-4 py-3">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div class="d-flex align-items-center gap-3">
                    <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                        <i class="bi bi-building fs-4 text-primary"></i>
                    </div>
                    <h5 class="card-title mb-0 fw-semibold text-dark">All Branches</h5>
                </div>

                <div class="input-group input-group-sm" style="width: 360px; min-width: 240px;">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="bi bi-search text-muted"></i>
                    </span>
                    <input type="search"
                           class="form-control ps-0 border-start-0 shadow-none"
                           id="searchInput"
                           placeholder="Search by code, name or address..."
                           value="@searchString"
                           autocomplete="off">
                </div>
            </div>
        </div>

        <!-- Table Area -->
        <div class="table-responsive">
            @if (!Model.Any())
            {
                <div class="text-center py-5 my-5">
                    <i class="bi bi-building-slash display-1 text-muted opacity-50 mb-4"></i>
                    <h5 class="text-muted mb-2">No branches found</h5>
                    <p class="text-muted small mb-4">Start by adding your first branch</p>
                    <a asp-action="CreateOrEdit" class="btn btn-outline-primary">
                        <i class="bi bi-plus-lg me-1"></i> Create First Branch
                    </a>
                </div>
            }
            else
            {
                <table class="table table-hover table-borderless align-middle mb-0" id="branchesTable">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Branch Code</th>
                            <th>Branch Name</th>
                            <th>Address</th>
                            <th>Created</th>
                            <th class="text-center" style="width: 220px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-medium text-dark">@item.BranchCode</td>
                                <td class="fw-medium">@item.BranchName</td>
                                <td class="text-muted">@item.Address</td>
                                <td class="text-muted small">@item.CreatedAt.ToString("dd MMM yyyy")</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-outline-info border-0" title="View Details">
                                            <i class="bi bi-eye-fill"></i>
                                        </a>
                                        <a asp-action="CreateOrEdit" asp-route-id="@item.Id"
                                           class="btn btn-outline-warning border-0" title="Edit">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this branch?\nThis action cannot be undone.');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                    class="btn btn-outline-danger border-0"
                                                    title="Delete">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>

        <!-- Footer with Pagination & Info -->
        <div class="card-footer bg-white border-top px-4 py-3 d-flex justify-content-between align-items-center flex-wrap gap-3">
            <!-- Showing Info -->
            <div class="text-muted small">
                Showing
                <strong>
                    @if (Model.Any())
                    {
                        @(((currentPage - 1) * pageSize) + 1)
                        <span>–</span>
                        @Math.Min(((currentPage - 1) * pageSize) + Model.Count(), totalRecords)
                    }
                    else
                    {
                        @:0
                    }
                </strong>
                of
                <strong>@totalRecords</strong> branches
                <span class="text-muted ms-2">(Page @currentPage of @totalPages)</span>
            </div>

            <!-- Page Size Selector -->
            <div class="d-flex align-items-center gap-2">
                <span class="text-muted small">Show:</span>
                <select class="form-select form-select-sm" style="width: 80px;" id="pageSizeSelect">
                    <option value="10" selected>10</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                </select>
                <span class="text-muted small">per page</span>
            </div>

            <!-- Pagination Controls -->
            @if (totalPages > 1)
            {
                <nav aria-label="Branches pagination">
                    <ul class="pagination pagination-sm mb-0">
                        <!-- First -->
                        <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-page="1"
                               asp-route-searchString="@searchString"
                               asp-route-pageSize="@pageSize">
                                First
                            </a>
                        </li>

                        <!-- Previous -->
                        <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-page="@(currentPage - 1)"
                               asp-route-searchString="@searchString"
                               asp-route-pageSize="@pageSize">
                                Previous
                            </a>
                        </li>

                        <!-- Page Numbers -->
                        @{
                            const int RANGE = 2;
                            int start = Math.Max(1, currentPage - RANGE);
                            int end = Math.Min(totalPages, currentPage + RANGE);

                            if (start == 1 && totalPages > RANGE * 2 + 1)
                                end = Math.Min(RANGE * 2 + 1, totalPages);

                            if (end == totalPages && totalPages > RANGE * 2 + 1)
                                start = Math.Max(1, totalPages - RANGE * 2);
                        }

                        @if (start > 1)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }

                        @for (int i = start; i <= end; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index"
                                   asp-route-page="@i"
                                   asp-route-searchString="@searchString"
                                   asp-route-pageSize="@pageSize">@i</a>
                            </li>
                        }

                        @if (end < totalPages)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }

                        <!-- Next -->
                        <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-page="@(currentPage + 1)"
                               asp-route-searchString="@searchString"
                               asp-route-pageSize="@pageSize">
                                Next
                            </a>
                        </li>

                        <!-- Last -->
                        <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-page="@totalPages"
                               asp-route-searchString="@searchString"
                               asp-route-pageSize="@pageSize">
                                Last
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Client-side real-time search preview
        document.getElementById('searchInput')?.addEventListener('input', function(e) {
            const term = e.target.value.toLowerCase().trim();
            document.querySelectorAll('#branchesTable tbody tr').forEach(row => {
                if (row.cells.length < 5) return; // skip empty state row
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(term) ? '' : 'none';
            });
        });

        // Page size selector
        document.getElementById('pageSizeSelect')?.addEventListener('change', function(e) {
            const pageSize = e.target.value;
            const searchString = '@searchString';
            window.location.href = `@Url.Action("Index")?page=1&pageSize=${pageSize}&searchString=${encodeURIComponent(searchString)}`;
        });

        // Set current page size
        document.getElementById('pageSizeSelect').value = '@pageSize';

        // Enter key search
        document.getElementById('searchInput')?.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                const searchString = this.value.trim();
                const pageSize = document.getElementById('pageSizeSelect').value;
                window.location.href = `@Url.Action("Index")?page=1&pageSize=${pageSize}&searchString=${encodeURIComponent(searchString)}`;
            }
        });
    </script>
}

