@model IEnumerable<BankManagementSystem.Models.Branch>

@{
    ViewData["Title"] = "Branch List";
}

<h2>Branch List</h2>

<p>
    <a asp-action="CreateOrEdit" class="btn btn-primary">Create New Branch</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Branch Code</th>
            <th>Branch Name</th>
            <th>Address</th>
            <th>Created At</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BranchCode</td>
                <td>@item.BranchName</td>
                <td>@item.Address</td>
                <td>@item.CreatedAt.ToString("dd-MMM-yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id"
                       class="btn btn-info btn-sm">Details</a>

                    <a asp-action="CreateOrEdit" asp-route-id="@item.Id"
                       class="btn btn-warning btn-sm">Edit</a>

                    <a asp-action="Delete" asp-route-id="@item.Id"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this branch?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
