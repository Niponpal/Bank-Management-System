@model BankManagementSystem.Models.Branch

@{
    ViewData["Title"] = $"Branch Details - {Model?.BranchCode}";
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-5 flex-wrap gap-3">
    <div>
        <h2 class="fw-bold mb-1">Branch Details</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Branches</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model?.BranchCode</li>
            </ol>
        </nav>
    </div>

    <div class="d-flex gap-2 flex-wrap">
        <a asp-action="Index" class="btn btn-outline-secondary shadow-sm d-flex align-items-center gap-2">
            <i class="bi bi-arrow-left"></i>
            Back to List
        </a>
        <a asp-action="CreateOrEdit" asp-route-id="@Model.Id"
           class="btn btn-outline-warning shadow-sm d-flex align-items-center gap-2">
            <i class="bi bi-pencil"></i>
            Edit Branch
        </a>
    </div>
</div>

<!-- Main Card -->
<div class="dashboard-card shadow overflow-hidden">
    <!-- Card Header -->
    <div class="card-header bg-gradient-primary-soft d-flex align-items-center gap-4 py-4 px-5">
        <div class="bg-white bg-opacity-25 rounded-circle p-3">
            <i class="bi bi-building fs-4"></i>
        </div>
        <div>
            <h3 class="card-title mb-0 fw-bold">@Model?.BranchName</h3>
            <small class="opacity-75">
                Branch Code: <strong>@Model?.BranchCode</strong> • ID: @Model?.Id
            </small>
        </div>
    </div>

    <!-- Card Body -->
    <div class="card-body p-5">
        <div class="row g-4">
            <!-- Main Branch Info -->
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 rounded-3 h-100">
                    <div class="card-body p-4">
                        <h5 class="text-primary mb-4">
                            <i class="bi bi-info-circle me-2"></i>
                            Branch Information
                        </h5>

                        <div class="row g-4">
                            <div class="col-md-6">
                                <label class="text-muted small fw-bold">Branch Code</label>
                                <h6 class="fw-bold mb-0">@Model?.BranchCode</h6>
                            </div>

                            <div class="col-md-6">
                                <label class="text-muted small fw-bold">Branch Name</label>
                                <h6 class="fw-bold mb-0">@Model?.BranchName</h6>
                            </div>

                            <div class="col-12">
                                <label class="text-muted small fw-bold">Full Address</label>
                                <h6 class="fw-bold mb-0">@(Model?.Address ?? "—")</h6>
                            </div>

                            <div class="col-md-6">
                                <label class="text-muted small fw-bold">Created Date</label>
                                <h6 class="fw-bold mb-0">@(Model?.CreatedAt.ToString("dd MMM yyyy") ?? "—")</h6>
                            </div>

                            <div class="col-md-6">
                                <label class="text-muted small fw-bold">Created Time</label>
                                <h6 class="fw-bold mb-0">@(Model?.CreatedAt.ToString("hh:mm tt") ?? "—")</h6>
                            </div>

                            <div class="col-md-6">
                                <label class="text-muted small fw-bold">Status</label>
                                <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3 py-2 fw-medium">
                                    Active
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="col-lg-4">
                <div class="card shadow-sm border-0 rounded-3 h-100">
                    <div class="card-body p-4">
                        <h5 class="text-primary mb-4">
                            <i class="bi bi-gear me-2"></i>
                            Quick Actions
                        </h5>

                        <div class="d-grid gap-3">
                            <a asp-action="CreateOrEdit" asp-route-id="@Model.Id"
                               class="btn btn-warning d-flex align-items-center justify-content-center gap-2">
                                <i class="bi bi-pencil-square"></i>
                                Edit Branch
                            </a>

                            <button class="btn btn-outline-primary d-flex align-items-center justify-content-center gap-2" onclick="window.print()">
                                <i class="bi bi-printer"></i>
                                Print Details
                            </button>

                            <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center justify-content-center gap-2">
                                <i class="bi bi-arrow-left-circle"></i>
                                Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="card-footer bg-light border-0 py-4 text-center text-dark small">
        <i class="bi bi-shield-check text-success me-1"></i>
        All branch information is securely stored • Last viewed: @DateTime.Now.ToString("dd MMM yyyy • hh:mm tt")
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary-soft {
            background: linear-gradient(135deg, rgba(51,102,255,0.06) 0%, transparent 100%);
        }

        .dashboard-card {
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

            .dashboard-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 12px 32px rgba(0,0,0,0.18);
            }

        .card.shadow-sm:hover {
            transform: translateY(-4px);
            transition: transform 0.2s ease;
        }

        .badge.bg-opacity-10 {
            backdrop-filter: blur(4px);
        }
        @@media print {
            .btn, .breadcrumb, .top-bar, .sidebar, footer

        {
            display: none !important;
        }

        body {
            background: white !important;
            color: black !important;
        }

        .dashboard-card {
            box-shadow: none !important;
            border: 1px solid #ddd !important;
        }

        }
    </style>
}