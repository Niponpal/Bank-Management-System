@model BankManagementSystem.Models.Branch

@{
    ViewData["Title"] = "Branch Details";
}

<div class="container-fluid py-5 bg-light min-vh-100">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb bg-transparent p-0">
            <li class="breadcrumb-item">
                <a asp-action="Index" class="text-decoration-none text-primary">
                    <i class="bi bi-buildings me-1"></i>Branches
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Branch Details</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-9 col-xl-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <!-- Header -->
                <div class="card-header bg-dark text-white py-5 px-5 position-relative">
                    <div class="d-flex align-items-center justify-content-between flex-wrap gap-4">
                        <div class="d-flex align-items-center">
                            <div class="bg-white bg-opacity-10 p-4 rounded-circle me-4">
                                <i class="bi bi-building fs-2"></i>
                            </div>
                            <div>
                                <h1 class="h3 fw-bold mb-1">@Model.BranchName</h1>
                                <p class="mb-0 text-white-75">
                                    <span class="badge bg-light text-dark px-3 py-2 me-2">
                                        @Model.BranchCode
                                    </span>
                                    Branch ID: @Model.Id.ToString("D4")
                                </p>
                            </div>
                        </div>

                        <div class="d-flex gap-3">
                            <span class="badge bg-success bg-opacity-75 px-4 py-2">
                                <i class="bi bi-check-circle-fill me-1"></i>Active
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="card-body p-5 bg-white">
                    <div class="row g-5">
                        <!-- Left Column - Main Info -->
                        <div class="col-lg-8">
                            <h5 class="fw-semibold text-dark mb-4 pb-2 border-bottom">
                                <i class="bi bi-info-circle me-2 text-primary"></i>
                                Branch Information
                            </h5>

                            <dl class="row g-4 mb-0">
                                <dt class="col-sm-4 col-md-3 text-muted fw-medium pt-2">
                                    Branch Code
                                </dt>
                                <dd class="col-sm-8 col-md-9 fw-semibold">@Model.BranchCode</dd>

                                <dt class="col-sm-4 col-md-3 text-muted fw-medium pt-2">
                                    Full Name
                                </dt>
                                <dd class="col-sm-8 col-md-9 fw-semibold">@Model.BranchName</dd>

                                <dt class="col-sm-4 col-md-3 text-muted fw-medium pt-2">
                                    Address
                                </dt>
                                <dd class="col-sm-8 col-md-9 fw-semibold text-break">
                                    @Model.Address
                                </dd>

                                <dt class="col-sm-4 col-md-3 text-muted fw-medium pt-2">
                                    Created
                                </dt>
                                <dd class="col-sm-8 col-md-9">
                                    <div class="fw-semibold">
                                        @Model.CreatedAt.ToString("dd MMMM yyyy")
                                    </div>
                                    <small class="text-muted">
                                        @Model.CreatedAt.ToString("hh:mm tt") •
                                        @(Model.CreatedAt.ToString("dddd"))
                                    </small>
                                </dd>


                            </dl>
                        </div>

                        <!-- Right Column - Quick Actions & Status -->
                        <div class="col-lg-4">
                            <div class="card border bg-light-subtle h-100 rounded-4">
                                <div class="card-body p-4">
                                    <h6 class="fw-semibold text-dark mb-4">
                                        <i class="bi bi-gear me-2 text-primary"></i>
                                        Quick Actions
                                    </h6>

                                    <div class="d-grid gap-3">
                                        <a asp-action="CreateOrEdit" asp-route-id="@Model.Id"
                                           class="btn btn-warning btn-lg">
                                            <i class="bi bi-pencil-square me-2"></i>
                                            Edit Branch
                                        </a>

                                        <a asp-action="Index"
                                           class="btn btn-outline-secondary">
                                            <i class="bi bi-arrow-left-circle me-2"></i>
                                            Back to List
                                        </a>
                                    </div>

                                    <hr class="my-4" />

                                    <h6 class="fw-semibold text-dark mb-3">
                                        Status
                                    </h6>
                                    <div class="d-flex align-items-center gap-2 mb-2">
                                        <i class="bi bi-circle-fill text-success fs-6"></i>
                                        <span class="fw-medium">Active</span>
                                    </div>
                                    <small class="text-muted">
                                        This branch is operational and visible in the system
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="card-footer bg-light border-0 py-4 px-5 text-center text-muted small">
                    <i class="bi bi-shield-check text-success me-1"></i>
                    All branch information is securely stored • Last viewed: @DateTime.Now.ToString("dd MMM yyyy • hh:mm tt")
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        dt {
            font-weight: 500;
            color: #495057;
        }

        dd {
            margin-bottom: 0;
        }

        .card-header {
            background: linear-gradient(135deg, #1a1f36 0%, #2c334d 100%);
        }
    </style>
}