@model BankManagementSystem.Models.AccountCustomer

@{
    bool isEdit = Model != null && Model.Id > 0;
    ViewData["Title"] = isEdit ? "Edit Account" : "Create New Account";
    ViewData["ActivePage"] = "Accounts";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-5 flex-wrap gap-3">
    <div>
        <h3 class="mb-1 fw-bold">@ViewData["Title"]</h3>
        <small class="text-muted d-block mt-1">
            @(isEdit ? "Update existing account information" : "Register a new customer account")
        </small>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary shadow-sm d-flex align-items-center gap-2">
        <i class="bi bi-arrow-left"></i>
        Back to List
    </a>
</div>

<!-- Main Form Card -->
<div class="dashboard-card shadow overflow-hidden">
    <!-- Card Header -->
    <div class="card-header bg-gradient-primary-soft d-flex align-items-center gap-3 py-4">
        <div class="bg-white bg-opacity-25 rounded-circle p-3">
            <i class="bi bi-person-vcard fs-4"></i>
        </div>
        <div>
            <h5 class="card-title mb-0 fw-semibold">Account Information</h5>
            <small class="opacity-75 d-block">* Required fields</small>
        </div>
    </div>

    <!-- Card Body -->
    <div class="card-body p-5">
        <form asp-action="CreateOrEdit" method="post" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()

            @if (isEdit)
            {
                <input type="hidden" asp-for="Id" />
            }

            <div class="row g-4">
                <!-- Account Number -->
                <div class="col-md-6">
                    <label asp-for="AccountNumber" class="form-label fw-semibold required">Account Number</label>
                    <input asp-for="AccountNumber" class="form-control form-control-lg shadow-sm"
                           placeholder="ACC-XXXXXXXX" required autofocus maxlength="20" />
                    <span asp-validation-for="AccountNumber" class="text-danger small mt-1 d-block"></span>
                </div>

                <!-- Initial Balance -->
                <div class="col-md-6">
                    <label asp-for="Balance" class="form-label fw-semibold required">Initial Balance</label>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-light fw-medium">৳</span>
                        <input asp-for="Balance" class="form-control shadow-sm"
                               type="number" step="0.01" min="0" required />
                    </div>
                    <span asp-validation-for="Balance" class="text-danger small mt-1 d-block"></span>
                </div>

                <!-- Full Name -->
                <div class="col-md-6">
                    <label asp-for="FullName" class="form-label fw-semibold required">Full Name</label>
                    <input asp-for="FullName" class="form-control form-control-lg shadow-sm"
                           placeholder="Enter full name as per NID" required />
                    <span asp-validation-for="FullName" class="text-danger small mt-1 d-block"></span>
                </div>

                <!-- Phone Number -->
                <div class="col-md-6">
                    <label asp-for="Phone" class="form-label fw-semibold required">Phone Number</label>
                    <input asp-for="Phone" class="form-control form-control-lg shadow-sm"
                           placeholder="01XXXXXXXXX" required pattern="01[0-9]{9}" />
                    <span asp-validation-for="Phone" class="text-danger small mt-1 d-block"></span>
                </div>

                <!-- NID -->
                <div class="col-md-6">
                    <label asp-for="NID" class="form-label fw-semibold required">National ID (NID)</label>
                    <input asp-for="NID" class="form-control form-control-lg shadow-sm"
                           placeholder="Enter 10 or 13 digit NID" required pattern="[0-9]{10,13}" />
                    <span asp-validation-for="NID" class="text-danger small mt-1 d-block"></span>
                </div>

                <!-- Branch -->
                <div class="col-md-6">
                    <label asp-for="BranchId" class="form-label fw-semibold required">Branch</label>
                    <select asp-for="BranchId"
                            asp-items="@(ViewBag.BranchId)"
                            class="form-select form-select-lg shadow-sm"
                            required>
                        <option value="">-- Select Branch --</option>
                    </select>
                    <span asp-validation-for="BranchId" class="text-danger small mt-1 d-block"></span>
                </div>

                <!-- Account Status -->
                <div class="col-12 mt-3">
                    <div class="form-check form-switch form-switch-lg">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="IsActive" class="form-check-label fw-semibold ms-2 fs-5">
                            Account Status: Active
                        </label>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="mt-5 pt-4 border-top d-flex gap-3 flex-wrap justify-content-end">
                <button type="button" class="btn btn-outline-secondary px-5 py-2 shadow-sm"
                        onclick="window.history.back()">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </button>

                <button type="submit" class="btn btn-success px-5 py-2 shadow-sm">
                    <i class="bi bi-check2-circle me-2"></i>
                    @(isEdit ? "Update Account" : "Create Account")
                </button>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary-soft {
            background: linear-gradient(135deg, rgba(51,102,255,0.06) 0%, transparent 100%);
        }

        .dashboard-card {
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

            .dashboard-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 12px 32px rgba(0,0,0,0.18);
            }

        .form-control-lg, .form-select-lg {
            padding: 0.75rem 1.25rem;
            font-size: 1.1rem;
        }

        .form-label {
            font-size: 0.95rem;
        }

        .btn.shadow-sm:hover {
            transform: translateY(-1px);
            transition: transform 0.2s ease;
        }

        .input-group-lg > .form-control,
        .input-group-lg > .input-group-text {
            font-size: 1.1rem;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });

            // Auto focus first input
            document.querySelector('input[autofocus]')?.focus();
        })();
    </script>
}