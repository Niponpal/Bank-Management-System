@model BankManagementSystem.Models.AccountCustomer
@{
    bool isEdit = Model != null && Model.Id > 0;
    ViewData["Title"] = isEdit ? "Edit Account" : "Create New Account";
    ViewData["ActivePage"] = "Accounts";
}
<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-5 flex-wrap gap-3">
    <div>
        <h3 class="mb-0 fw-bold text-primary">@ViewData["Title"]</h3>
        <small class="text-muted d-block mt-1">
            @(isEdit ? "Update account information" : "Register a new customer account")
        </small>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm px-4 shadow-sm">
        <i class="bi bi-arrow-left-short me-2"></i>Back to List
    </a>
</div>

<!-- Premium Form Card -->
<div class="dashboard-card shadow-lg border-0 rounded-4 overflow-hidden">
    <!-- Card Header -->
    <div class="card-header bg-gradient-primary text-white d-flex align-items-center gap-3 py-4">
        <div class="bg-white bg-opacity-25 rounded-circle p-3">
            <i class="bi bi-person-vcard fs-4"></i>
        </div>
        <div>
            <h5 class="card-title mb-0 fw-semibold">Account Information</h5>
            <small class="opacity-75">Required fields are marked with *</small>
        </div>
    </div>

    <!-- Card Body -->
    <div class="card-body p-5">
        <form asp-action="CreateOrEdit" method="post" class="needs-validation" novalidate>
            <input type="hidden" asp-for="Id" />

            <div class="row g-4">
                <!-- Account Number -->
                <div class="col-md-6">
                    <label asp-for="AccountNumber" class="form-label fw-semibold required">Account Number</label>
                    <input asp-for="AccountNumber" class="form-control form-control-lg shadow-sm"
                           placeholder="ACC-XXXXXXXX" required autofocus maxlength="20" />
                    <div class="invalid-feedback mt-1">
                        @Html.ValidationMessageFor(m => m.AccountNumber)
                    </div>
                </div>

                <!-- Initial Balance -->
                <div class="col-md-6">
                    <label asp-for="Balance" class="form-label fw-semibold required">Initial Balance</label>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-light fw-medium">৳</span>
                        <input asp-for="Balance" class="form-control shadow-sm"
                               type="number" step="0.01" min="0" required />
                    </div>
                    <div class="invalid-feedback mt-1">
                        @Html.ValidationMessageFor(m => m.Balance)
                    </div>
                </div>

                <!-- Full Name -->
                <div class="col-md-6">
                    <label asp-for="FullName" class="form-label fw-semibold required">Full Name</label>
                    <input asp-for="FullName" class="form-control form-control-lg shadow-sm"
                           placeholder="Enter full name as per NID" required />
                    <div class="invalid-feedback mt-1">
                        @Html.ValidationMessageFor(m => m.FullName)
                    </div>
                </div>

                <!-- Phone Number -->
                <div class="col-md-6">
                    <label asp-for="Phone" class="form-label fw-semibold required">Phone Number</label>
                    <input asp-for="Phone" class="form-control form-control-lg shadow-sm"
                           placeholder="01XXXXXXXXX" required pattern="\[0-9]{10}" />
                    <div class="invalid-feedback mt-1">
                        @Html.ValidationMessageFor(m => m.Phone)
                    </div>
                </div>

                <!-- NID -->
                <div class="col-md-6">
                    <label asp-for="NID" class="form-label fw-semibold required">National ID (NID)</label>
                    <input asp-for="NID" class="form-control form-control-lg shadow-sm"
                           placeholder="Enter 10 or 13 digit NID" required pattern="[0-9]{10,13}" />
                    <div class="invalid-feedback mt-1">
                        @Html.ValidationMessageFor(m => m.NID)
                    </div>
                </div>

                <!-- Branch -->
           <div class="col-md-6">
            <label class="form-label fw-semibold required">Branch</label>

            <select asp-for="BranchId"
                    asp-items="@(ViewBag.BranchId)"
                    class="form-select form-select-lg shadow-sm"
                    required>
                <option value="">-- Select Branch --</option>
            </select>

            <div class="invalid-feedback mt-1">
                @Html.ValidationMessageFor(m => m.BranchId)
            </div>
        </div>


@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%) !important;
        }
        .card {
            border-radius: 16px;
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-4px);
        }
    </style>
}


                <!-- Account Status -->
                <div class="col-12 mt-3">
                    <div class="form-check form-switch form-switch-lg">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="IsActive" class="form-check-label fw-semibold ms-2">
                            Account Status: Active
                        </label>
                    </div>
                </div>
            </div>

            <!-- Form Footer Actions -->
            <div class="mt-5 pt-4 border-top d-flex gap-3 flex-wrap justify-content-end">
                <button type="button" class="btn btn-outline-secondary px-5 py-2"
                        onclick="window.history.back()">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </button>
                <button type="submit" class="btn btn-success px-5 py-2 shadow-sm">
                    <i class="bi bi-check2-circle me-2"></i>
                    @(isEdit ? "Update Account" : "Create Account")
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Enhanced Bootstrap Validation + Smooth UX -->
    <script>
        (function () {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });

            // Auto focus first input
            document.querySelector('input[autofocus]')?.focus();

            // Subtle focus animation
            document.querySelectorAll('.form-control, .form-select').forEach(input => {
                input.addEventListener('focus', () => {
                    input.parentElement.classList.add('focused');
                });
                input.addEventListener('blur', () => {
                    input.parentElement.classList.remove('focused');
                });
            });
        })();
    </script>
}