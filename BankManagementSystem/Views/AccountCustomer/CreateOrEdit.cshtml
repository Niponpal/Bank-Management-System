@model BankManagementSystem.Models.AccountCustomer

@{
    bool isEdit = Model != null && Model.Id > 0;
    ViewData["Title"] = isEdit ? "Edit Account Customer" : "Create Account Customer";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CreateOrEdit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <!-- Account Number -->
        <div class="col-md-6 mb-3">
            <label asp-for="AccountNumber" class="form-label"></label>
            <input asp-for="AccountNumber" class="form-control" />
            <span asp-validation-for="AccountNumber" class="text-danger"></span>
        </div>

        <!-- Balance -->
        <div class="col-md-6 mb-3">
            <label asp-for="Balance" class="form-label"></label>
            <input asp-for="Balance" class="form-control" />
            <span asp-validation-for="Balance" class="text-danger"></span>
        </div>

        <!-- Full Name -->
        <div class="col-md-6 mb-3">
            <label asp-for="FullName" class="form-label"></label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <!-- Phone -->
        <div class="col-md-6 mb-3">
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <!-- NID -->
        <div class="col-md-6 mb-3">
            <label asp-for="NID" class="form-label"></label>
            <input asp-for="NID" class="form-control" />
            <span asp-validation-for="NID" class="text-danger"></span>
        </div>

        <!-- Branch -->
     <!-- Branch -->
        <select asp-for="BranchId"
                class="form-select"
                asp-items="@(ViewBag.BranchId)">
            <option value="">-- Select Branch --</option>
        </select>

     

        <!-- Is Active -->
        <div class="col-md-6 mb-3">
            <div class="form-check mt-4">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">
            @(isEdit ? "Update" : "Create")
        </button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
