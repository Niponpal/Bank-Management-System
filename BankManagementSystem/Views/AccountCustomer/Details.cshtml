@model BankManagementSystem.Models.AccountCustomer

@{
    ViewData["Title"] = $"Account Details - {Model?.AccountNumber}";
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-5 flex-wrap gap-3">
    <div>
        <h2 class="fw-bold mb-1">Account Details</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Accounts</a></li>
                <li class="breadcrumb-item active">
                    @Model.AccountNumber
                </li>

            </ol>
        </nav>
    </div>

    <div class="d-flex gap-2 flex-wrap">
        <a asp-action="Index" class="btn btn-outline-secondary shadow-sm d-flex align-items-center gap-2">
            <i class="bi bi-arrow-left"></i>
            Back to List
        </a>
        <a asp-action="CreateOrEdit" asp-route-id="@Model.Id"
           class="btn btn-outline-warning shadow-sm d-flex align-items-center gap-2">
            <i class="bi bi-pencil"></i>
            Edit Account
        </a>
    </div>
</div>

<!-- Main Content -->
<div class="dashboard-card shadow overflow-hidden">
    <!-- Card Header -->
    <div class="card-header bg-gradient-primary-soft d-flex align-items-center gap-3 py-4">
        <div class="bg-white bg-opacity-25 rounded-circle p-3">
            <i class="bi bi-wallet2 fs-4"></i>
        </div>
        <div>
            <h5 class="card-title mb-0 fw-semibold">Account Summary</h5>
            <small class="opacity-75">
                Account No: @Model.AccountNumber
            </small>


            
        </div>
    </div>

    <!-- Card Body -->
    <div class="card-body p-5">
        <div class="row g-4">
            <!-- Account Info -->
            <div class="col-lg-6">
                <div class="card h-100 shadow-sm border-0 rounded-3">
                    <div class="card-body">
                        <h5 class="text-primary mb-4">
                            <i class="bi bi-info-circle me-2"></i>Account Information
                        </h5>
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="text-muted small fw-bold">Account Number</label>
                                <h6 class="fw-bold mb-0">
                                    @Model.AccountNumber
                                </h6>

                            </div>
                            <div class="col-12">
                                <label class="text-muted small fw-bold">Current Balance</label>
                                <h4 class="fw-bold mb-0 @(Model?.Balance >= 0 ? "text-success" : "text-danger")">
                                    ৳ @(Model?.Balance.ToString("N2") ?? "0.00")
                                </h4>
                            </div>
                            <div class="col-12">
                                <label class="text-muted small fw-bold">Created Date</label>
                                <h6 class="fw-bold mb-0">@(Model?.CreatedAt.ToString("dd MMM yyyy hh:mm tt") ?? "—")</h6>
                            </div>
                            <div class="col-12">
                                <label class="text-muted small fw-bold">Status</label>
                                @if (Model?.IsActive == true)
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3 py-2 fw-medium">
                                        Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 px-3 py-2 fw-medium">
                                        Inactive
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Customer Info -->
            <div class="col-lg-6">
                <div class="card h-100 shadow-sm border-0 rounded-3">
                    <div class="card-body">
                        <h5 class="text-primary mb-4">
                            <i class="bi bi-person-circle me-2"></i>Customer Information
                        </h5>
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="text-muted small fw-bold">Full Name</label>
                                <h6 class="fw-bold mb-0">@(Model?.FullName ?? "—")</h6>
                            </div>
                            <div class="col-12">
                                <label class="text-muted small fw-bold">Phone Number</label>
                                <h6 class="fw-bold mb-0">@(Model?.Phone ?? "—")</h6>
                            </div>
                            <div class="col-12">
                                <label class="text-muted small fw-bold">National ID (NID)</label>
                                <h6 class="fw-bold mb-0">@(Model?.NID ?? "—")</h6>
                            </div>
                           
                        </div>
                    </div>
                </div>
            </div>

            <!-- Branch Info -->
            <div class="col-12">
                <div class="card shadow-sm border-0 rounded-3">
                    <div class="card-body">
                        <h5 class="text-primary mb-4">
                            <i class="bi bi-building me-2"></i>Branch Information
                        </h5>
                        @if (Model?.Branch != null)
                        {
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label class="text-muted small fw-bold">Branch Name</label>
                                    <h6 class="fw-bold mb-0">@Model.Branch.BranchName</h6>
                                </div>
                                <div class="col-md-4">
                                    <label class="text-muted small fw-bold">Branch Code</label>
                                    <h6 class="fw-bold mb-0">@Model.Branch.BranchCode</h6>
                                </div>
                                <div class="col-md-4">
                                    <label class="text-muted small fw-bold">Address</label>
                                    <h6 class="fw-bold mb-0">@Model.Branch.Address</h6>
                                </div>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted mb-0 text-center py-4">
                                <i class="bi bi-building-slash fs-3 opacity-50 d-block mb-2"></i>
                                No branch assigned
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Actions -->
    <div class="card-footer bg-transparent border-0 d-flex justify-content-end gap-3 p-4">
        <button class="btn btn-outline-primary shadow-sm d-flex align-items-center gap-2" onclick="window.print()">
            <i class="bi bi-printer"></i>
            Print Details
        </button>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary-soft {
            background: linear-gradient(135deg, rgba(51,102,255,0.06) 0%, transparent 100%);
        }

        .dashboard-card {
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

            .dashboard-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 12px 32px rgba(0,0,0,0.18);
            }

        .table-hover tbody tr:hover {
            background-color: rgba(51,102,255,0.07);
        }

        .card.shadow-sm:hover {
            transform: translateY(-4px);
            transition: transform 0.2s ease;
        }
        @@media print {
            .btn, .breadcrumb, .top-bar, .sidebar, footer

        {
            display: none !important;
        }

        body {
            background: white !important;
            color: black !important;
        }

        .dashboard-card {
            box-shadow: none !important;
            border: 1px solid #ddd !important;
        }

        }
    </style>
}