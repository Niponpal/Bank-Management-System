@model BankManagementSystem.Models.AccountCustomer

@{
    ViewData["Title"] = "Account Details - " + Model.AccountNumber;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Account Details</h2>
            <p class="text-muted mb-0">Customer: @Model.FullName</p>
        </div>
        <div>
            @if (Model.IsActive)
            {
                <span class="badge bg-success px-4 py-2 fs-6">ACTIVE</span>
            }
            else
            {
                <span class="badge bg-danger px-4 py-2 fs-6">INACTIVE</span>
            }
        </div>
    </div>

    <div class="card shadow border-0 rounded-4 overflow-hidden">

        <!-- Account Summary -->
        <div class="card-header bg-gradient-primary text-white py-4">
            <h4 class="mb-0"><i class="fas fa-wallet me-2"></i>Account Summary</h4>
        </div>

        <div class="card-body p-4">
            <div class="row g-4">

                <!-- Account Info -->
                <div class="col-md-6">
                    <div class="card h-100 shadow-sm border-0 rounded-3">
                        <div class="card-body">
                            <h5 class="text-primary mb-3">
                                <i class="fas fa-info-circle me-2"></i>Account Information
                            </h5>
                            <table class="table table-borderless mb-0">
                                <tr>
                                    <th class="text-muted w-50">Account Number</th>
                                    <td>@Model.AccountNumber</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">Balance</th>
                                    <td class="fw-bold text-success fs-5">
                                        @Model.Balance.ToString("N2") BDT
                                    </td>
                                </tr>
                                <tr>
                                    <th class="text-muted">Created At</th>
                                    <td>@Model.CreatedAt.ToString("dd MMM yyyy, hh:mm tt")</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Customer Info -->
                <div class="col-md-6">
                    <div class="card h-100 shadow-sm border-0 rounded-3">
                        <div class="card-body">
                            <h5 class="text-primary mb-3">
                                <i class="fas fa-user me-2"></i>Customer Information
                            </h5>
                            <table class="table table-borderless mb-0">
                                <tr>
                                    <th class="text-muted w-50">Full Name</th>
                                    <td>@Model.FullName</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">Phone</th>
                                    <td>@Model.Phone</td>
                                </tr>
                                <tr>
                                    <th class="text-muted">NID</th>
                                    <td>@Model.NID</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Branch Info -->
                <div class="col-12">
                    <div class="card shadow-sm border-0 rounded-3">
                        <div class="card-body">
                            <h5 class="text-primary mb-3">
                                <i class="fas fa-building me-2"></i>Branch Information
                            </h5>

                            @if (Model.Branch != null)
                            {
                                <table class="table table-borderless mb-0">
                                    <tr>
                                        <th class="text-muted w-25">Branch Name</th>
                                        <td>@Model.Branch.BranchName</td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Branch Code</th>
                                        <td>@Model.Branch.BranchCode</td>
                                    </tr>
                                    <tr>
                                        <th class="text-muted">Address</th>
                                        <td>@Model.Branch.Address</td>
                                    </tr>
                                </table>
                            }
                            else
                            {
                                <p class="text-muted mb-0">No branch assigned</p>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!-- Actions -->
        <div class="card-footer bg-light border-0 d-flex justify-content-end gap-3 p-4">
            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="fas fa-arrow-left me-2"></i>Back
            </a>
            <a asp-action="CreateOrEdit" asp-route-id="@Model.Id" class="btn btn-warning px-4">
                <i class="fas fa-edit me-2"></i>Edit
            </a>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #4e73df, #224abe);
    }
</style>
