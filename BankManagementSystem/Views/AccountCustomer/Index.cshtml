@model IEnumerable<BankManagementSystem.Models.AccountCustomer>

@{
    ViewData["Title"] = "Account Customers";
}

<h2>Account Customers</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Account</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Account Number</th>
            <th>Full Name</th>
            <th>Phone</th>
            <th>NID</th>
            <th>Balance</th>
            <th>Status</th>
            <th>Branch</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AccountNumber</td>
                <td>@item.FullName</td>
                <td>@item.Phone</td>
                <td>@item.NID</td>
                <td>@item.Balance.ToString("0.00")</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </td>
                <td>@item.Branch?.BranchName</td>
                <td>@item.CreatedAt.ToString("dd-MMM-yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
