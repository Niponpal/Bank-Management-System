@using BankManagementSystem.Helper
@using BankManagementSystem.Services
@model IEnumerable<BankManagementSystem.Models.AccountCustomer>
@inject ISignInHelper SignInHelper
@inject IRolePermissionService RolePermissionService

@{

    var roles = SignInHelper.Roles;


    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
    string searchString = ViewBag.CurrentFilter ?? "";
    int totalRecords = ViewBag.TotalRecords ?? 0;
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-5 flex-wrap gap-3">
    <div>
        <h3 class="mb-1 fw-bold">Accounts Management</h3>
        <small class="text-muted">View and manage all customer accounts</small>
    </div>
    <div class="d-flex gap-2 flex-wrap">
        <a asp-action="CreateOrEdit" class="btn btn-primary shadow-sm d-flex align-items-center gap-2">
            <i class="bi bi-plus-circle"></i>
            Create New Account
        </a>
        <button class="btn btn-outline-secondary shadow-sm d-flex align-items-center gap-2" onclick="window.print()">
            <i class="bi bi-printer"></i>
            Print
        </button>
    </div>
</div>

<!-- Main Table Card -->
<div class="dashboard-card overflow-hidden shadow">
    <!-- Card Header with Search -->
    <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-3 bg-gradient-primary-soft">
        <h5 class="card-title mb-0">All Accounts</h5>

        <div class="input-group input-group-sm" style="width: 340px; min-width: 240px;">
            <span class="input-group-text bg-transparent border-end-0">
                <i class="bi bi-search text-muted"></i>
            </span>
            <input type="text" class="form-control border-start-0" id="searchInput"
                   placeholder="Search by name, account, NID or phone..." value="@searchString">
        </div>
    </div>

    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-hover mb-0 align-middle" id="accountsTable">
            <thead>
                <tr>
                    <th>Account No</th>
                    <th>Customer Name</th>
                    <th>Phone</th>
                    <th>NID</th>
                    <th class="text-end">Balance</th>
                    <th>Status</th>
                    <th>Branch</th>
                    <th>Created</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="9" class="text-center py-5 text-muted">
                            <div class="py-5">
                                <i class="bi bi-bank fs-1 opacity-50 mb-3 d-block"></i>
                                <h5 class="text-muted mb-2">No accounts found</h5>
                                <small>Create your first account to get started</small>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-medium">@item.AccountNumber</td>
                            <td>
                                <div class="d-flex flex-column">
                                    <span class="fw-bold">@item.FullName</span>
                                    <small class="text-muted">@(item.Phone ?? "—")</small>
                                </div>
                            </td>
                            <td>@(item.Phone ?? "—")</td>
                            <td>@(item.NID ?? "—")</td>
                            <td class="text-end fw-bold">
                                @if (item.Balance >= 0)
                                {
                                    <span class="text-success">৳ @item.Balance.ToString("N2")</span>
                                }
                                else
                                {
                                    <span class="text-danger">৳ @item.Balance.ToString("N2")</span>
                                }
                            </td>
                            <td>
                                @if (item.IsActive)
                                {

                                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3 py-1">
                                        Active

                                    </span>
                                }
                                else

                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 px-3 py-1">
                                       
                                        Inactive
                                    </span>
                                }
                            </td>
                            <td>@(item.Branch == null ? "Branch NULL" : item.Branch.BranchName)</td>

                              <td class="text-muted">@item.CreatedAt.ToString("dd MMM yyyy")</td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm">
                                   @if(RolePermissionService.CanView(roles)){
                                    <a asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-outline-info" title="View">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    }
                                  @if (RolePermissionService.CanEdit(roles)){
                                    <a asp-action="CreateOrEdit" asp-route-id="@item.Id"
                                       class="btn btn-outline-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    }
                                     @if (RolePermissionService.CanDelete(roles)){
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                          class="d-inline" onsubmit="return confirm('Are you sure you want to delete this account?');">
                                        <button type="submit" class="btn btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Footer with Pagination -->
    <div class="card-footer d-flex justify-content-between align-items-center flex-wrap gap-3 bg-transparent border-0">
        <div class="text-muted small">
            Showing
            @(Model.Any() ? $"{(currentPage - 1) * pageSize + 1}–{Math.Min((currentPage - 1) * pageSize + Model.Count(), totalRecords)}" : "0")
            of @totalRecords accounts
        </div>

        @if (totalPages > 1)
        {
            <nav aria-label="Accounts pagination">
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@(currentPage - 1)"
                           asp-route-searchString="@searchString">Previous</a>
                    </li>

                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-page="@i"
                               asp-route-searchString="@searchString">@i</a>
                        </li>
                    }

                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-page="@(currentPage + 1)"
                           asp-route-searchString="@searchString">Next</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

@section Styles {
    <style>
        .dashboard-card {
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

            .dashboard-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 12px 32px rgba(0,0,0,0.18);
            }

        .bg-gradient-primary-soft {
            background: linear-gradient(135deg, rgba(51,102,255,0.06) 0%, transparent 100%);
        }

        .table-hover tbody tr:hover {
            background-color: rgba(51,102,255,0.07);
        }

        .badge.bg-opacity-10 {
            backdrop-filter: blur(4px);
        }

        .btn.shadow-sm:hover {
            transform: translateY(-1px);
            transition: transform 0.2s ease;
        }
    </style>
}

@section Scripts {
    <script>
        // Real-time client-side search
        document.getElementById('searchInput')?.addEventListener('input', function(e) {
            const term = e.target.value.toLowerCase().trim();
            document.querySelectorAll('#accountsTable tbody tr').forEach(row => {
                if (row.cells.length === 1) return; // skip empty state row
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(term) ? '' : 'none';
            });
        });
    </script>
}