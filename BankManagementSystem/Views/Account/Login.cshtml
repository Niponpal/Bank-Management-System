@model BankManagementSystem.Models.Auth.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login • BankManagement</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --sidebar-width: 260px;
            --sidebar-collapsed: 80px;
            --primary: #3366ff;
            --sidebar-bg: #0d1429;
            --card-bg: #111827;
            --hover-bg: rgba(51,102,255,0.11);
            --border: #1e293b;
            --text-muted: #94a3b8;
            --text: #f1f5f9;
            --body-bg: #0d1429;
        }

        body {
            font-family: 'Inter', system-ui, sans-serif;
            background: var(--body-bg);
            color: var(--text);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1.5rem;
        }

        .login-container {
            width: 100%;
            max-width: 460px;
        }

        .login-card {
            background: var(--card-bg);
            border-radius: 16px;
            border: 1px solid var(--border);
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0,0,0,0.45);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .login-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 30px 80px rgba(0,0,0,0.55);
            }

        .card-header {
            background: linear-gradient(135deg, #1e3a8a 0%, #3366ff 100%);
            padding: 2.5rem 2rem 2rem;
            text-align: center;
        }

            .card-header h1 {
                font-size: 2rem;
                font-weight: 700;
                margin: 0;
                color: white;
            }

            .card-header p {
                margin: 0.6rem 0 0;
                color: rgba(255,255,255,0.85);
                font-size: 0.95rem;
            }

        .card-body {
            padding: 2.25rem 2rem;
        }

        .form-label {
            font-weight: 600;
            color: var(--text);
            font-size: 0.92rem;
            margin-bottom: 0.55rem;
        }

        .form-control-dark {
            background: #1f2937;
            border: 1px solid #374151;
            color: var(--text);
            height: 52px;
            border-radius: 10px;
            padding-left: 2.75rem;
            font-size: 0.98rem;
        }

            .form-control-dark:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 4px rgba(51,102,255,0.18);
                background: #1f2937;
            }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            font-size: 1.15rem;
            pointer-events: none;
            z-index: 5;
        }

        .password-toggle {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--text-muted);
            font-size: 1.1rem;
            cursor: pointer;
        }

            .password-toggle:hover {
                color: var(--primary);
            }

        .btn-login {
            background: linear-gradient(135deg, var(--primary) 0%, #1e40af 100%);
            border: none;
            height: 52px;
            font-weight: 600;
            font-size: 1rem;
            border-radius: 10px;
            transition: all 0.25s ease;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(51,102,255,0.45);
            }

        .text-muted-light {
            color: var(--text-muted) !important;
        }

        .link-primary-custom {
            color: var(--primary);
            text-decoration: none;
        }

            .link-primary-custom:hover {
                color: #4d7fff;
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="login-card">
            <div class="card-header">
                <h1>Sign In</h1>
                <p>Welcome back to BankManagement</p>
            </div>

            <div class="card-body">
                <form asp-action="Login" method="post" novalidate>
                    <!-- Email / Username -->
                    <div class="mb-4 position-relative">
                        <label asp-for="Email" class="form-label">Email / Username</label>
                        <i class="bi bi-person-fill input-icon"></i>
                        <input asp-for="Email" class="form-control form-control-dark"
                               placeholder="admin@bank.bd" autofocus required />
                        <span asp-validation-for="Email" class="text-danger small d-block mt-1"></span>
                    </div>

                    <!-- Password -->
                    <div class="mb-4 position-relative">
                        <label asp-for="Password" class="form-label">Password</label>
                        <i class="bi bi-lock-fill input-icon"></i>
                        <input asp-for="Password" class="form-control form-control-dark"
                               type="password" id="password" placeholder="••••••••" required />
                        <button type="button" class="password-toggle" id="togglePassword">
                            <i class="bi bi-eye"></i>
                        </button>
                        <span asp-validation-for="Password" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe" />
                            <label class="form-check-label small text-muted-light" for="rememberMe">Remember me</label>
                        </div>
                        <a href="#" class="link-primary-custom small">Forgot password?</a>
                    </div>

                    <button type="submit" class="btn btn-login w-100">
                        <i class="bi bi-box-arrow-in-right me-2"></i> Sign In
                    </button>
                </form>

                <div class="text-center mt-4 text-muted-light small">
                    Don't have an account?
                    <a asp-controller="Account" asp-action="Register" class="link-primary-custom">Create Account</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Password visibility toggle
        document.getElementById('togglePassword')?.addEventListener('click', function () {
            const input = document.getElementById('password');
            const icon = this.querySelector('i');
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.replace('bi-eye', 'bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.replace('bi-eye-slash', 'bi-eye');
            }
        });
    </script>

</body>
</html>